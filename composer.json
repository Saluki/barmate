{
	"name": "Saluki/Barmate",
	"description": "POS web application",
	"type": "project",

	"require": {
		"laravel/framework": "5.0.*",
		"doctrine/dbal": "~2.3",
		"illuminate/html": "~5.0",
        "nesbot/carbon": "~1.14",
		"fzaninotto/faker": "^1.5"
	},

	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
        "filp/whoops": "~1.0"
	},

	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},

	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},

	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},

	"config": {
		"preferred-install": "dist"
	}
}
